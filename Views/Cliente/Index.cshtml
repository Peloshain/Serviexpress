@model ServiExpress.Models.tbClientes
@using ServiExpress.Servicios;
@{
    ViewBag.Title = "ClienteIndex";
}
@{
    ClienteServicio clienteservicio = new ClienteServicio();
    int idcliente = clienteservicio.ObtenerPorCorreo(User.Identity.Name).IdCliente;
}

<form class="col s12">
    <div class="row">
        @*<a class="waves-effect waves-light btn-large"><i class="material-icons left">cloud</i>Contrato</a>*@   
        @Html.ActionLink("Contrato", "Create", "Contrato", null, new { @class = "waves-effect waves-light btn-large" })
    </div>
    <div class="row">
        @*<a class="waves-effect waves-light btn-large disabled"><i class="material-icons left">cloud</i>Modificar</a>*@
        @Html.ActionLink("Modificar", "Edit", "Cliente", new { id = idcliente }, new { @class = "waves-effect waves-light btn-large" } )
    </div>
    <div class="row">
        @*<a class="waves-effect waves-light btn-large disabled"><i class="material-icons left">cloud</i>Pago</a>*@
        @Html.ActionLink("Pago", "Create", "Pago", null, new { @class = "waves-effect waves-light btn-large" })

    </div>
</form>
